{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      "./apiGateway/templates/**/*"
    ],
    "deleteOutDir": true,
    "plugins": [
      "@nestjs/swagger"
    ],
    "watchAssets": true
  }
}